{
  "name": "hardhat-fund-me",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "npx hardhat test",
    "lint": "solhint 'contracts/*.sol'",
    "lint:fix": "solhint 'contracts/*.sol' --fix",
    "coverage": "npx hardhat coverage",
    "start:localhost": "npx hardhat node",
    "deploy:localhost": "npx hardhat deploy --network localhost",
    "deploy:goerli": "npx hardhat deploy --network goerli",
    "fund:localhost": "npx hardhat run .\\scripts\\fund.ts --network localhost",
    "withdraw:localhost": "npx hardhat run .\\scripts\\withdraw.ts --network localhost",
    "fund:testnet": "npx hardhat run .\\scripts\\fund.ts --network goerli",
    "withdraw:testnet": "npx hardhat run .\\scripts\\withdraw.ts --network goerli"
  },
  "author": "HR Mandiv",
  "license": "MIT",
  "devDependencies": {
    "@chainlink/contracts": "^0.5.1",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.3",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.17",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.4",
    "hardhat-deploy": "^0.11.22",
    "hardhat-gas-reporter": "^1.0.9",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4"
  }
}
